# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://compliance_user:compliance_password@localhost:5432/compliance_db"
POSTGRES_DB=compliance_db
POSTGRES_USER=compliance_user
POSTGRES_PASSWORD=compliance_password

# Redis Configuration
REDIS_URL="redis://:redis_password@localhost:6379"
REDIS_PASSWORD=redis_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
API_PORT=3000
API_HOST=localhost
API_BASE_URL=http://localhost:3000

# AI Services Configuration
AI_SERVICE_URL=http://localhost:8001
DOCUMENT_AI_URL=http://localhost:8001
LIVENESS_AI_URL=http://localhost:8001

# File Storage Configuration
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=compliance-documents
MINIO_USE_SSL=false

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
DATA_ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Compliance Configuration
KYC_LOW_RISK_THRESHOLD=30
KYC_HIGH_RISK_THRESHOLD=70
AML_ALERT_THRESHOLD=80
DOCUMENT_CONFIDENCE_THRESHOLD=85
LIVENESS_CONFIDENCE_THRESHOLD=90

# Notification Configuration
NOTIFICATION_SERVICE_URL=http://localhost:3001
EMAIL_SERVICE_ENABLED=false
SMS_SERVICE_ENABLED=false

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# Development Configuration
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:5173
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true