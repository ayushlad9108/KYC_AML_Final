# AI Services Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL="postgresql://compliance_user:compliance_password@localhost:5432/compliance_db"

# Redis Configuration
REDIS_URL="redis://:redis_password@localhost:6379"

# API Configuration
AI_SERVICE_PORT=8001
AI_SERVICE_HOST=0.0.0.0

# Model Configuration
MODEL_PATH=./models
DOCUMENT_MODEL_PATH=./models/document_verification
LIVENESS_MODEL_PATH=./models/liveness_detection
BEHAVIOR_MODEL_PATH=./models/behavior_analysis

# Processing Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf
IMAGE_PROCESSING_TIMEOUT=30
MODEL_INFERENCE_TIMEOUT=10

# Confidence Thresholds
DOCUMENT_CONFIDENCE_THRESHOLD=0.85
LIVENESS_CONFIDENCE_THRESHOLD=0.90
TAMPERING_DETECTION_THRESHOLD=0.75

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false

# Security Configuration
API_KEY_REQUIRED=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173