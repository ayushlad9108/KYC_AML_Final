# Server
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000
TRUST_PROXY=true

# CORS
CORS_ORIGIN=http://localhost:5173,https://your-frontend.vercel.app

# Modes
DEMO_MODE=true
ENABLE_DB=false
LOG_LEVEL=debug

# MongoDB
MONGODB_URI=mongodb://127.0.0.1:27017/kyc_aml

# JWT
